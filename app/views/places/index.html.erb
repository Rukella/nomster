<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
      <%= image_tag 'diner1.jpg', class:  'img-fluid' %>
      <div class="carousel-caption d-none d-md-block">
        <h3>Just Restaurants</h3>
      </div>
    </div>
    <div class="carousel-item">
       <%= image_tag 'diner.jpg', class: 'img-fluid' %>
    <div class="carousel-caption d-none d-md-block">
      <h3>Looking for a place to eat?</h3>
    </div>
    </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container">
<div class="row">
 <% @places.each do |place| %>
    <div class="col-md-3">
    <div class="card">
        <div class="card-header preview">
    <% if place.photos.present? %>
     <%= image_tag place.photos.last.picture.url %>
  <% end %>
  </div>
    <div class="card-body">
   <%= link_to place.name, place_path(place) %>
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p><br />
     <% if place.comments.present? %>
    <div class="col-12">
       <blockquote>
        <% if place.comments.last.humanized_rating.present? %>
          <b><%= place.comments.last.humanized_rating %></b> -
        <% end %>
        <%= place.comments.last.message %><br />
      </blockquote>
    </div>
<% end %>
  </div>
</div>
</div>
<% end %>
</div>
</div>





<div class="container">
<div class="digg_pagination">
  <%= will_paginate @places, :container => true %>
</div>
</div>
